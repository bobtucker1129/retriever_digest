generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GoalType {
  MONTHLY
  ANNUAL
}

model Goal {
  id               String   @id @default(cuid())
  type             GoalType @unique
  salesRevenue     Decimal  @db.Decimal(12, 2)
  salesCount       Int
  estimatesCreated Int
  newCustomers     Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Recipient {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
